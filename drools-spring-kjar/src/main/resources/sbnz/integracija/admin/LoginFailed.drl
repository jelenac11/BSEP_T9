package sbnz.integracija.admin


import java.util.Date;
import java.util.ArrayList;
import com.tim9.bolnica.model.*;
   

rule "Login failed, same username"
    when
        $l: Log($id: id, $m: message, message.contains("Unsuccessful login") || message.contains("Wrong email or password"))
        $alarms: ArrayList() from collect( AdminAlarm())
        $n: Number(intValue > 5) from accumulate(
            $log : Log($id2: id, $ip: ip, message == $m)
            over window:time(1m),
            count($log)
        )
        not (AdminAlarm(logId == $id))
        not(AdminAlarm(message.contains("SAME USERNAME - " + $m), new Date(timestamp.getTime() + 60*1000) > new Date()))
    then
    	System.out.println("Login failed, same username");
        insert(new AdminAlarm(null, $id, new Date(), "SAME USERNAME - " + $m));
end


rule "Login failed, same source"
    when
        $l: Log($id: id, $m: message, message.contains("Unsuccessful login") || message.contains("Wrong email or password"), $ip2: ip)
        $alarms: ArrayList() from collect( AdminAlarm())
        $no: Number(intValue > 5) from accumulate(
            $log : Log($id2: id, ip == $ip2, message.contains("Unsuccessful login") || message.contains("Wrong email or password"))
            over window:time(1m),
            count($log)
        )
        not (AdminAlarm(logId == $id))
        not(AdminAlarm(message.contains("SAME SOURCE - Unsuccessful logins from same source - " + $ip2), new Date(timestamp.getTime() + 60*1000) > new Date()))
    then
    	System.out.println("Login failed, same source");
        insert(new AdminAlarm(null, $id, new Date(), "SAME SOURCE - Unsuccessful logins from same source - " + $ip2));
end
   